<Window x:Class="TV.Windows.MainSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TV.Windows"
        mc:Ignorable="d"
        Title="Главное окно"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Resources>
            <ResourceDictionary Source="/Resources/Dictionary.xaml"/>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" Background="#FFF0F0F0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Background="#FFE8E8E8">
                <Button Content="Библиотека" 
                    Style="{StaticResource SectionHeaderButtonStyle}"/>

                <Expander Header="Группы" Margin="5,2" Foreground="#FF333333">
                    <StackPanel Margin="15,5">
                        <TextBlock Text="Реклама" Foreground="#FF555555" Margin="2"/>
                        <TextBlock Text="Новости" Foreground="#FF555555" Margin="2"/>
                    </StackPanel>
                </Expander>

                <Expander Header="Медиа" Margin="5,2" Foreground="#FF333333">
                    <StackPanel Margin="15,5">
                        <TextBlock Text="Фото (12)" Foreground="#FF555555" Margin="2"/>
                        <TextBlock Text="Видео (5)" Foreground="#FF555555" Margin="2"/>
                        <TextBlock Text="Сайты (3)" Foreground="#FF555555" Margin="2"/>
                    </StackPanel>
                </Expander>
            </StackPanel>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#FFCCCCCC"/>

            <Grid Grid.Column="2" Background="#FFF5F5F5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button Content="Расписание" 
                    Style="{StaticResource SectionHeaderButtonStyle}"/>

                <ScrollViewer Grid.Row="1" Margin="10">
                    <StackPanel>
                        <Border Margin="0,5" Background="#FFFFFFFF" CornerRadius="3" Padding="10" BorderBrush="#FFDDDDDD" BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Expander Header="08:00 [Реклама]" Foreground="#FF333333" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">
                                    <StackPanel Margin="5,2.5">
                                        <TextBlock Text="Фото (12)" Foreground="#FF555555" Margin="2"/>
                                        <TextBlock Text="Видео (5)" Foreground="#FF555555" Margin="2"/>
                                        <TextBlock Text="Сайты (3)" Foreground="#FF555555" Margin="2"/>
                                    </StackPanel>
                                </Expander>

                                <TextBlock Text="30 мин" Foreground="#FF666666" 
                                           Grid.Row="0" Grid.Column="1" VerticalAlignment="Center"
                                           Margin="10,0,0,0"/>

                                <ProgressBar Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                             Value="75" Maximum="100" Height="10" 
                                             Background="#FFEEEEEE" Foreground="#FF007ACC"
                                             VerticalAlignment="Center" Margin="0,5,0,0"/>
                            </Grid>
                        </Border>

                        <Border Margin="0,5" Background="#FFFFFFFF" CornerRadius="3" Padding="10" BorderBrush="#FFDDDDDD" BorderThickness="1">
                            <StackPanel>
                                <Grid Margin="0,0,0,5">
                                    <Expander Header="08:30 [Новости]" Foreground="#FF333333" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">
                                        <StackPanel Margin="5,2.5">
                                            <TextBlock Text="Фото (12)" Foreground="#FF555555" Margin="2"/>
                                            <TextBlock Text="Видео (5)" Foreground="#FF555555" Margin="2"/>
                                            <TextBlock Text="Сайты (3)" Foreground="#FF555555" Margin="2"/>
                                        </StackPanel>
                                    </Expander>
                                    <TextBlock Text="20 мин" Foreground="#FF666666" 
                                               HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Grid>
                                <ProgressBar Value="50" Maximum="100" Height="10" 
                                             Background="#FFEEEEEE" Foreground="#FF007ACC"/>
                            </StackPanel>
                        </Border>

                        <Border Margin="0,5" Background="#FFFFFFFF" CornerRadius="3" Padding="10" BorderBrush="#FFDDDDDD" BorderThickness="1">
                            <StackPanel>
                                <Grid Margin="0,0,0,5">
                                    <Expander Header="09:00 [Меню]" Foreground="#FF333333" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">
                                        <StackPanel Margin="5,2.5">
                                            <TextBlock Text="Фото (12)" Foreground="#FF555555" Margin="2"/>
                                            <TextBlock Text="Видео (5)" Foreground="#FF555555" Margin="2"/>
                                            <TextBlock Text="Сайты (3)" Foreground="#FF555555" Margin="2"/>
                                        </StackPanel>
                                    </Expander>
                                    <TextBlock Text="40 мин" Foreground="#FF666666" 
                                               HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Grid>
                                <ProgressBar Value="100" Maximum="100" Height="10" 
                                             Background="#FFEEEEEE" Foreground="#FF007ACC"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>

        <DockPanel Grid.Row="2" Background="#FFE5E5E5" Height="40">
            <StackPanel Orientation="Horizontal" Margin="10,0">
                <Button Content="Добавить" Style="{StaticResource BottomButtonStyle}"/>
            </StackPanel>

            <TextBlock Text='Текущее: "Новости" (08:30-08:50)' 
                 Foreground="#FF333333" 
                 VerticalAlignment="Center"
                 HorizontalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,0">
                <Button Content="▶" Style="{StaticResource BottomButtonStyle}"/>
                <Button Content="■" Style="{StaticResource BottomButtonStyle}" Margin="5,0"/>
                <Button Content="=>" Style="{StaticResource BottomButtonStyle}" Margin="5,0"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
