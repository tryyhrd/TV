<Page x:Class="TV.Pages.Displays"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TV.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Displays" Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" Background="#FF2D2D30" Height="30">
            <TextBlock Text="Digital Signage Manager" 
                   Foreground="White" FontSize="12" 
                   VerticalAlignment="Center" Margin="10,0"/>
        </DockPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Playlists -->
            <Border Grid.Column="0" BorderBrush="#FFCCCCCC" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Плейлисты:" 
                           Margin="10,10,10,5" 
                           FontWeight="Bold"/>

                    <ListView Grid.Row="1" x:Name="playlistsList" 
                          Margin="10,0,10,10" 
                          SelectionChanged="Playlist_Selected">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" Margin="2"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" 
                            HorizontalAlignment="Center" Margin="10,0,10,5">
                        <Button Content="Добавить" Width="80" Click="AddPlaylist"/>
                        <Button Content="Удалить" Width="80" Click="DeletePlaylist" Margin="5,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Right Panel - Content Management -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Preview Section -->
                <Border Grid.Row="0" Margin="10" Background="#FFF0F0F0" 
                    BorderBrush="#FFCCCCCC" BorderThickness="1" 
                    CornerRadius="3">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="150"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Превью" 
                               Margin="10,5,10,5" 
                               FontWeight="Bold"/>

                        <Border Grid.Row="1" Margin="10,0,10,10" 
                            Background="Black" CornerRadius="2">
                            <ContentControl x:Name="previewContent" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Content Editor Section -->
                <TabControl Grid.Row="1" Margin="10">
                    <TabItem Header="Содержимое плейлиста">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <ListView Grid.Row="0" x:Name="playlistContentList" 
                                  Margin="10">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="#" Width="30">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding Index}" 
                                                           HorizontalAlignment="Center"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Название" Width="200" 
                                                   DisplayMemberBinding="{Binding Name}"/>
                                        <GridViewColumn Header="Длительность" Width="80" 
                                                   DisplayMemberBinding="{Binding Duration}"/>
                                        <GridViewColumn Header="Тип" Width="80" 
                                                   DisplayMemberBinding="{Binding Type}"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>

                            <StackPanel Grid.Row="1" Orientation="Horizontal" 
                                    HorizontalAlignment="Right" Margin="10">
                                <Button Content="Добавить файл" Click="AddFile" Width="100"/>
                                <Button Content="Добавить URL" Click="AddUrl" Width="100" Margin="5,0"/>
                                <Button Content="Поднять" Click="MoveUp" Width="70" Margin="10,0,0,0"/>
                                <Button Content="Опустить" Click="MoveDown" Width="70" Margin="5,0"/>
                                <Button Content="Удалить" Click="RemoveFromPlaylist" 
                                    Width="120" Margin="5,0"/>
                            </StackPanel>
                        </Grid>
                    </TabItem>

                    <TabItem Header="Настройки контента">
                        <ScrollViewer>
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Content Type Selection -->
                                <GroupBox Header="Тип контента">
                                    <StackPanel>
                                        <ComboBox x:Name="contentTypeCombo" SelectedIndex="0" SelectionChanged="ContentType_Changed">
                                            <ComboBoxItem Content="Плейлист"/>
                                            <ComboBoxItem Content="Медиафайл"/>
                                            <ComboBoxItem Content="Веб-страница"/>
                                            <ComboBoxItem Content="Текст"/>
                                        </ComboBox>

                                        <!-- Content Selector -->
                                        <Grid x:Name="contentSelectorGrid" Margin="0,10,0,0">
                                            <!-- Playlist Selector -->
                                            <StackPanel x:Name="playlistSelector" Visibility="Visible">
                                                <TextBlock Text="Выберите плейлист:" Margin="0,0,0,5"/>
                                                <ComboBox x:Name="playlistCombo" DisplayMemberPath="Name"/>
                                            </StackPanel>

                                            <!-- Media File Selector -->
                                            <StackPanel x:Name="mediaFileSelector" Visibility="Collapsed">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBox x:Name="mediaFilePath" Width="300" Margin="0,0,5,0" 
                                                           ToolTip="Путь к файлу"/>
                                                    <Button Content="Обзор" Click="BrowseMediaFile" Width="60"/>
                                                </StackPanel>
                                                <ComboBox x:Name="mediaTypeCombo" Margin="0,5,0,0" SelectedIndex="0">
                                                    <ComboBoxItem Content="Изображение"/>
                                                    <ComboBoxItem Content="Видео"/>
                                                </ComboBox>
                                            </StackPanel>

                                            <!-- Web Page Selector -->
                                            <StackPanel x:Name="webPageSelector" Visibility="Collapsed">
                                                <TextBlock Text="URL веб-страницы:" Margin="0,0,0,5"/>
                                                <TextBox x:Name="webUrlTextBox" Text="https://" 
                                                       ToolTip="Введите URL веб-страницы"/>
                                            </StackPanel>

                                            <!-- Text Selector -->
                                            <StackPanel x:Name="textSelector" Visibility="Collapsed">
                                                <TextBlock Text="Текст для отображения:" Margin="0,0,0,5"/>
                                                <TextBox x:Name="textContentTextBox" Height="60" TextWrapping="Wrap"
                                                       AcceptsReturn="True" ToolTip="Введите текст для отображения"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                    <TextBlock Text="Размер шрифта:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                    <ComboBox x:Name="fontSizeCombo" Width="60" SelectedIndex="2">
                                                        <ComboBoxItem Content="12"/>
                                                        <ComboBoxItem Content="24"/>
                                                        <ComboBoxItem Content="36"/>
                                                        <ComboBoxItem Content="48"/>
                                                        <ComboBoxItem Content="72"/>
                                                    </ComboBox>
                                                    <TextBlock Text="Цвет:" VerticalAlignment="Center" Margin="20,0,5,0"/>
                                                    <ComboBox x:Name="colorCombo" Width="80" SelectedIndex="0">
                                                        <ComboBoxItem Content="Белый"/>
                                                        <ComboBoxItem Content="Черный"/>
                                                        <ComboBoxItem Content="Красный"/>
                                                        <ComboBoxItem Content="Синий"/>
                                                        <ComboBoxItem Content="Зеленый"/>
                                                    </ComboBox>
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </GroupBox>

                                <!-- Display Settings -->
                                <GroupBox Grid.Row="1" Header="Настройки отображения" Margin="0,10,0,10">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <CheckBox x:Name="applyToAllCheckBox" Content="Применить ко всем дисплеям" 
                                                 IsChecked="True" Margin="0,0,0,5" Checked="ApplyToAll_Changed" Unchecked="ApplyToAll_Changed"/>

                                        <DataGrid x:Name="displaysDataGrid" Grid.Row="1" AutoGenerateColumns="False" 
                                                 CanUserAddRows="False">
                                            <DataGrid.Columns>
                                                <DataGridTemplateColumn Header="Выбор" Width="60">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <CheckBox IsChecked="{Binding IsSelected}" HorizontalAlignment="Center"/>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>

                                                <DataGridTextColumn Header="Дисплей" Binding="{Binding Name}" Width="100" IsReadOnly="True"/>
                                                <DataGridTextColumn Header="Разрешение" Binding="{Binding Resolution}" Width="100" IsReadOnly="True"/>
                                                <DataGridCheckBoxColumn Header="Полный экран" Binding="{Binding Fullscreen}" Width="80"/>
                                                <DataGridCheckBoxColumn Header="Зациклить" Binding="{Binding Loop}" Width="60"/>
                                                <DataGridTextColumn Header="Длит. (сек)" Binding="{Binding Duration}" Width="70"/>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </Grid>
                                </GroupBox>

                                <!-- Action Buttons -->
                                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="Предпросмотр" Click="Preview" Width="100" Margin="0,0,5,0"/>
                                    <Button Content="Применить" Click="ApplySettings" Width="80"/>
                                    <Button Content="Отмена" Click="CancelSettings" Width="80" Margin="5,0"/>
                                </StackPanel>
                            </Grid>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </Grid>
        </Grid>

        <!-- Footer -->
        <DockPanel Grid.Row="2" Background="#FFE5E5E5" Height="40">
            <StackPanel Orientation="Horizontal" Margin="10,0">
                <TextBlock Text="Монитор:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <ComboBox x:Name="monitorComboBox" Width="120" 
                      SelectedIndex="0" VerticalAlignment="Center">
                    <ComboBoxItem Content="Дисплей 1"/>
                    <ComboBoxItem Content="Дисплей 2"/>
                    <ComboBoxItem Content="Дисплей 3"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Запустить на TV" Click="StartPlayback" 
                    Width="120" Margin="0,0,5,0"/>
                <Button Content="Остановить" Click="StopPlayback" 
                    Width="80" Margin="5,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,0">
                <Button Content="Настройки" Click="Settings" Width="80"/>
                <Button Content="Закрыть" Click="Close" Width="80" Margin="5,0"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Page>
