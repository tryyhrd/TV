<Page x:Class="TV.Pages.Media.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TV.Pages.Media"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="900"
      Title="Media" Background="White">

    <Grid Margin="15">
        <Grid.Resources>
            <ResourceDictionary Source="/Resources/Dictionary.xaml"/>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Background="#F8FAFC" BorderBrush="#E2E8F0">
            <Grid Margin="5">
                <TextBlock Text="🎵 Управление плейлистами" 
                          Style="{StaticResource PageHeaderStyle}"
                          Foreground="#1E293B"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0,0,0">
                    <Button Content="➕ Создать плейлист" Click="CreatePlaylist" 
                            Style="{StaticResource ModernButton}" 
                            Background="#065F46"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="12,6"/>
                    <Button Content="Удалить плейлист" Click="DeleteSelectedPlaylist" 
                            Style="{StaticResource ModernButton}" 
                            Background="#991B1B" 
                            Foreground="White"
                            BorderThickness="0"
                            Padding="12,6"
                            Margin="8,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource CardStyle}" 
                    Background="White" BorderBrush="#E2E8F0" BorderThickness="1"
                    CornerRadius="8" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#F8FAFC" Padding="12,10" 
                            CornerRadius="8,8,0,0" BorderThickness="0,0,0,1" BorderBrush="#E2E8F0">
                        <TextBlock Text="📂 Мои плейлисты" FontWeight="SemiBold" Foreground="#374151"/>
                    </Border>

                    <ListView Grid.Row="1" x:Name="playlistsListView" 
                              SelectionChanged="Playlist_Selected"
                              BorderThickness="0" Background="Transparent"
                              ItemsSource="{Binding Playlists}"
                              ItemContainerStyle="{StaticResource ModernListViewItem}"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              Padding="8">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Name}" 
                                                   FontWeight="SemiBold" 
                                                   FontSize="13"
                                                   Foreground="#1F2937"/>
                                        <TextBlock Text="{Binding ItemCount, StringFormat='{}Элементов: {0}'}" 
                                                   FontSize="11" 
                                                   Foreground="#6B7280"
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <Border Grid.Column="1" 
                                            Background="#F3F4F6" 
                                            CornerRadius="4" 
                                            Padding="4,2"
                                            VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Duration}" 
                                                   FontSize="10" 
                                                   Foreground="#4B5563" 
                                                   FontWeight="Medium"/>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                </Grid>
            </Border>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" 
                         Background="Transparent"/>

            <Border Grid.Column="2" Style="{StaticResource CardStyle}" 
                    Background="White" BorderBrush="#E2E8F0" BorderThickness="1"
                    CornerRadius="8" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#F8FAFC" Padding="15,12" 
                            CornerRadius="8,8,0,0" BorderThickness="0,0,0,1" BorderBrush="#E2E8F0">
                        <Grid>
                            <TextBlock x:Name="currentPlaylistName" 
                                       Text="Выберите плейлист" 
                                       FontWeight="SemiBold" 
                                       Foreground="#374151"
                                       VerticalAlignment="Center"/>

                            <Button Content="✏️ Переименовать" 
                                    Click="RenamePlaylist" 
                                    Style="{StaticResource ModernButton}" 
                                    Background="#6B7280"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Padding="10,5"
                                    HorizontalAlignment="Right" />
                        </Grid>
                    </Border>

                    <DataGrid Grid.Row="1" x:Name="playlistContentGrid" 
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              HeadersVisibility="Column" 
                              BorderThickness="0"
                              Background="White"
                              RowStyle="{StaticResource ModernDataGridRow}"
                              CellStyle="{StaticResource ModernDataGridCell}"
                              RowHeight="32"
                              VerticalGridLinesBrush="#F3F4F6"
                              HorizontalGridLinesBrush="Transparent"
                              BorderBrush="#E5E7EB"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto">

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#F8FAFC"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#E2E8F0"/>
                                <Setter Property="Foreground" Value="#374151"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Padding" Value="8,8"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" Binding="{Binding Order}" Width="40">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="TextAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="#6B7280"/>
                                        <Setter Property="FontSize" Value="11"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*" MinWidth="150">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="TextAlignment" Value="Left"/>
                                        <Setter Property="Foreground" Value="#1F2937"/>
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Тип" Binding="{Binding Type}" Width="70" MinWidth="60">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="TextAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="#6B7280"/>
                                        <Setter Property="FontSize" Value="11"/>
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Длительн." Binding="{Binding Duration}" Width="90" MinWidth="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="TextAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="#6B7280"/>
                                        <Setter Property="FontSize" Value="11"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Размер" Binding="{Binding FormattedSize}" Width="80" MinWidth="70">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="TextAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="#6B7280"/>
                                        <Setter Property="FontSize" Value="11"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTemplateColumn Header="Действия" Width="110" MinWidth="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" 
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center">
                                            <Button Content="▲" 
                                                    Click="MoveItemUp" 
                                                    Tag="{Binding Id}"
                                                    Style="{StaticResource ModernIconButton}" 
                                                    Background="#6B7280"
                                                    Width="22" 
                                                    Height="22"
                                                    FontSize="9"
                                                    ToolTip="Поднять вверх"/>
                                            <Button Content="▼" 
                                                    Click="MoveItemDown" 
                                                    Tag="{Binding Id}"
                                                    Style="{StaticResource ModernIconButton}" 
                                                    Background="#6B7280" 
                                                    Width="22" 
                                                    Height="22"
                                                    FontSize="9"
                                                    Margin="2,0,0,0"
                                                    ToolTip="Опустить вниз"/>
                                            <Button Content="🗑️" 
                                                    Click="RemoveItem" 
                                                    Tag="{Binding Id}"
                                                    Style="{StaticResource ModernIconButton}" 
                                                    Background="#DC2626" 
                                                    Width="22" 
                                                    Height="22"
                                                    FontSize="9"
                                                    Margin="2,0,0,0"
                                                    ToolTip="Удалить"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Border Grid.Row="2" Background="#F8FAFC" Padding="12,8" 
                            CornerRadius="0,0,8,8" BorderThickness="0,1,0,0" BorderBrush="#E2E8F0">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="📁 Добавить файлы" 
                                    Click="AddMediaFiles" 
                                    Style="{StaticResource ModernButton}" 
                                    Background="#065F46"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Padding="12,6"/>
                            <Button Content="🌐 Добавить URL" 
                                    Click="AddWebContent" 
                                    Style="{StaticResource ModernButton}" 
                                    Background="#374151" 
                                    Foreground="White"
                                    BorderThickness="0"
                                    Padding="12,6"
                                    Margin="8,0,0,0"/>
                            <Button Content="⏱️ Настройки времени" 
                                    Click="ConfigureTiming" 
                                    Style="{StaticResource ModernButton}" 
                                    Background="#6B7280" 
                                    Foreground="White"
                                    BorderThickness="0"
                                    Padding="12,6"
                                    Margin="8,0,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>