<Page x:Class="TV.Pages.Media.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TV.Pages.Media"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="900"
      Title="Media" Background="White">

    <Grid Margin="15">
        <Grid.Resources>
            <ResourceDictionary Source="/Resources/Dictionary.xaml"/>
        </Grid.Resources>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource CardStyle}">
            <Grid>
                <TextBlock Text="🎵 Управление плейлистами" Style="{StaticResource PageHeaderStyle}"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0,0,0">
                    <Button Content="➕ Создать плейлист" Click="CreatePlaylist" 
                        Style="{StaticResource ModernButton}" Background="#10B981"/>
                    <Button Content="🗑️ Удалить выбранные" Click="DeleteSelectedPlaylists" 
                        Style="{StaticResource ModernButton}" Background="#EF4444" Margin="8,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Мои плейлисты" FontWeight="SemiBold" Margin="0,0,0,10"/>

                    <ListView Grid.Row="1" x:Name="playlistsListView" 
                          SelectionChanged="Playlist_Selected"
                          BorderThickness="0" Background="Transparent"
                          ItemsSource="{Binding Playlists}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8,6" Background="Transparent" CornerRadius="4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Name}" FontWeight="Medium"/>
                                            <TextBlock Text="{Binding ItemCount, StringFormat='{}Элементов: {0}'}" 
                                                   FontSize="11" Foreground="#666"/>
                                        </StackPanel>

                                        <TextBlock Grid.Column="1" Text="{Binding Duration}" 
                                               FontSize="11" Foreground="#666" 
                                               VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                </Grid>
            </Border>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="Transparent"/>

            <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="0" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#F8F9FA" Padding="10" CornerRadius="6,6,0,0">
                        <Grid>
                            <TextBlock x:Name="currentPlaylistName" Text="Выберите плейлист" 
                                   FontWeight="SemiBold" VerticalAlignment="Center"/>

                            <Button Content="✏️ Переименовать" Click="RenamePlaylist" 
                                    Style="{StaticResource ModernButton}" Background="#6B7280" Width="auto" HorizontalAlignment="Right" />
                        </Grid>
                    </Border>

                    <DataGrid Grid.Row="1" x:Name="playlistContentGrid" 
                          AutoGenerateColumns="False" IsReadOnly="True"
                          HeadersVisibility="Column" BorderThickness="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" Binding="{Binding Order}" Width="40"/>
                            <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="180*"/>
                            <DataGridTextColumn Header="Тип" Binding="{Binding Type}" Width="90"/>
                            <DataGridTextColumn Header="Длительность" Binding="{Binding Duration}" Width="90"/>
                            <DataGridTextColumn Header="Размер" Binding="{Binding Size}" Width="80"/>
                            <DataGridTemplateColumn Header="Действия" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="▲" Click="MoveItemUp" Tag="{Binding Id}"
                                                Style="{StaticResource ModernIconButton}" Background="#6B7280"/>
                                            <Button Content="▼" Click="MoveItemDown" Tag="{Binding Id}"
                                                Style="{StaticResource ModernIconButton}" Background="#6B7280" Margin="2,0"/>
                                            <Button Content="🗑️" Click="RemoveItem" Tag="{Binding Id}"
                                                Style="{StaticResource ModernIconButton}" Background="#EF4444" Margin="2,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Border Grid.Row="2" Background="#F8F9FA" Padding="5" CornerRadius="0,0,6,6">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="📁 Добавить файлы" Click="AddMediaFiles" 
                                Style="{StaticResource ModernButton}" Background="#10B981"/>
                            <Button Content="🌐 Добавить URL" Click="AddWebContent" 
                                Style="{StaticResource ModernButton}" Background="#3B82F6" Margin="5,0"/>
                            <Button Content="⏱️ Настройки времени" Click="ConfigureTiming" 
                                Style="{StaticResource ModernButton}" Background="#6B7280" Margin="5,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
