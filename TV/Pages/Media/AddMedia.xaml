<Page x:Class="TV.Pages.Media.AddMedia"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TV.Pages.Media"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="900"
      Title="AddMedia">

    <Page.Resources>
        <ResourceDictionary Source="/Resources/Dictionary.xaml"/>
    </Page.Resources>

    <Border CornerRadius="8" BorderThickness="1" BorderBrush="#E5E7EB" Background="White">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#F8F9FA" CornerRadius="6,6,0,0" Padding="12,8" Margin="-10, -10, -10, 10">
                <Grid>
                    <TextBlock Text="Добавление медиа в плейлист" 
                               Style="{StaticResource PageHeaderStyle}" 
                               FontSize="14"
                               VerticalAlignment="Center"/>

                    <Button Content="✕" 
                            Click="CloseWindow"
                            Style="{StaticResource ModernIconButton}" 
                            Background="Transparent"
                            Foreground="#6B7280"
                            BorderThickness="0"
                            Width="28" Height="28"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            FontSize="11"
                            Padding="0"/>
                </Grid>
            </Border>

            <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,0,0,10">
                <Grid>
                    <Grid x:Name="mediaFilePanel" 
                          Margin="10" 
                          Visibility="Visible">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Выберите медиафайлы:" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,8"
                                   Grid.Row="0"/>

                        <Border Grid.Row="1"
                                BorderThickness="1" 
                                BorderBrush="#D1D5DB" 
                                CornerRadius="4" 
                                Background="#F9FAFB"
                                Margin="0,0,0,8">
                            <Grid>
                                <ListView x:Name="selectedFilesList" 
                                          BorderThickness="0" 
                                          Background="Transparent"
                                          ScrollViewer.VerticalScrollBarVisibility="Auto">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0" Orientation="Vertical">
                                                    <TextBlock Text="{Binding Name}" 
                                                               VerticalAlignment="Center"
                                                               FontSize="11"
                                                               ToolTip="{Binding FilePath}"
                                                               TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock Text="{Binding Type}" 
                                                               FontSize="10" 
                                                               Foreground="#6B7280"
                                                               Margin="0,1,0,0"/>
                                                </StackPanel>

                                                <TextBlock Grid.Column="1" 
                                                           Text="{Binding FormattedSize}" 
                                                           FontSize="10" 
                                                           Foreground="#6B7280"
                                                           VerticalAlignment="Center"
                                                           Margin="10,0"
                                                           MinWidth="60"
                                                           HorizontalAlignment="Right"/>

                                                <StackPanel Grid.Column="2" 
                                                            Orientation="Horizontal" 
                                                            VerticalAlignment="Center"
                                                            Margin="10,0">
                                                    <StackPanel.Style>
                                                        <Style TargetType="StackPanel">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Type}" Value="image">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </StackPanel.Style>

                                                    <TextBlock Text="Длит:" 
                                                               FontSize="10" 
                                                               Foreground="#6B7280"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,4,0"/>
                                                    <TextBox Name="tDuration"
                                                             Text="{Binding Duration, UpdateSourceTrigger=PropertyChanged}"
                                                             Width="50"
                                                             Height="20"
                                                             FontSize="11"
                                                             VerticalAlignment="Center"
                                                             ToolTip="Длительность в секундах"
                                                             PreviewTextInput="Duration_PreviewTextInput"
                                                             VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                                                    <TextBlock Text="сек" 
                                                               FontSize="9" 
                                                               Foreground="#6B7280"
                                                               VerticalAlignment="Center"
                                                               Margin="2,0,0,0"/>
                                                </StackPanel>

                                                <Button Grid.Column="3" 
                                                        Content="🗑️" 
                                                        Click="RemoveFile"
                                                        Tag="{Binding}"
                                                        Style="{StaticResource ModernIconButton}" 
                                                        Background="#DC2626" 
                                                        Width="20" 
                                                        Height="20"
                                                        HorizontalAlignment="Right"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>

                                <TextBlock x:Name="emptyFilesText" 
                                           Text="Файлы не выбраны" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center" 
                                           Foreground="#6B7280" 
                                           FontStyle="Italic"/>
                            </Grid>
                        </Border>

                        <StackPanel Grid.Row="2" 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Left">
                            <Button Content="📁 Выбрать файлы" 
                                    Click="BrowseMediaFiles" 
                                    Style="{StaticResource ModernButton}" 
                                    Background="#3B82F6"
                                    Height="28"
                                    FontSize="11"
                                    Padding="12,0"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <Border Grid.Row="3" Background="#F8F9FA" Padding="8" CornerRadius="4" Margin="0,0,0,10">
                <TextBlock x:Name="selectionInfo" 
                           Text="Выберите файлы или URL для добавления в плейлист" 
                           FontStyle="Italic" 
                           FontSize="11"
                           Foreground="#666"
                           TextWrapping="Wrap"/>
            </Border>

            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Отмена" 
                        Click="CloseWindow"
                        Style="{StaticResource ModernButton}" 
                        Background="#6B7280"
                        MinWidth="80"
                        Height="28"
                        FontSize="12"
                        Padding="15,0"/>

                <Button x:Name="addButton" 
                        Content="Добавить в плейлист" 
                        Click="AddToPlaylist"
                        Style="{StaticResource ModernButton}" 
                        Background="#065F46"
                        MinWidth="120"
                        Height="28"
                        FontSize="12"
                        Padding="15,0"
                        Margin="10,0,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Page>