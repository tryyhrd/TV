<Page x:Class="TV.Pages.Media.AddMedia"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TV.Pages.Media"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="900"
      Title="AddMedia">

    <Page.Resources>
        <ResourceDictionary Source="/Resources/Dictionary.xaml"/>
    </Page.Resources>

    <Border CornerRadius="8" BorderThickness="1" BorderBrush="#E5E7EB" Background="White">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <Border Grid.Row="0" Background="#F8F9FA" CornerRadius="6,6,0,0" Padding="12,8" Margin="-15, -15, -15, 10">
                <Grid>
                    <TextBlock Text="🎵 Добавление медиа в плейлист" 
                               Style="{StaticResource PageHeaderStyle}" 
                               FontSize="14"
                               VerticalAlignment="Center"/>

                    <Button Content="✕" 
                            Click="CloseWindow"
                            Style="{StaticResource ModernIconButton}" 
                            Background="Transparent"
                            Foreground="#6B7280"
                            BorderThickness="0"
                            Width="28" Height="28"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            FontSize="11"
                            Padding="0"/>
                </Grid>
            </Border>
            <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,0,0,10">
                <Grid>
                    <!-- Панель медиафайлов -->
                    <Grid x:Name="mediaFilePanel" 
                          Margin="10" 
                          Visibility="Visible">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Выберите медиафайлы:" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,8"
                                   Grid.Row="0"/>

                        <Border Grid.Row="1"
                                BorderThickness="1" 
                                BorderBrush="#D1D5DB" 
                                CornerRadius="4" 
                                Background="#F9FAFB"
                                Margin="0,0,0,8">
                            <Grid>
                                <ListView x:Name="selectedFilesList" 
                                          BorderThickness="0" 
                                          Background="Transparent"
                                          ScrollViewer.VerticalScrollBarVisibility="Auto">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Text="{Binding FileName}" 
                                                           VerticalAlignment="Center"
                                                           FontSize="11"
                                                           ToolTip="{Binding FullPath}"
                                                           TextTrimming="CharacterEllipsis"/>

                                                <TextBlock Grid.Column="1" 
                                                           Text="{Binding FileSize}" 
                                                           FontSize="10" 
                                                           Foreground="#6B7280"
                                                           VerticalAlignment="Center"
                                                           Margin="10,0"
                                                           MinWidth="60"/>

                                                <Button Grid.Column="2" 
                                                        Content="🗑️" 
                                                        Click="RemoveFile"
                                                        Tag="{Binding}"
                                                        Style="{StaticResource ModernIconButton}" 
                                                        Background="Transparent"
                                                        Width="20" 
                                                        Height="20"
                                                        FontSize="9"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>

                                <TextBlock x:Name="emptyFilesText" 
                                           Text="Файлы не выбраны" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center" 
                                           Foreground="#6B7280" 
                                           FontStyle="Italic"/>
                            </Grid>
                        </Border>

                        <StackPanel Grid.Row="2" 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Left">
                            <Button Content="📁 Выбрать файлы" 
                                    Click="BrowseMediaFiles" 
                                    Style="{StaticResource ModernButton}" 
                                    Background="#3B82F6"
                                    Height="28"
                                    FontSize="11"
                                    Padding="12,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Панель веб-контента -->
                    <Grid x:Name="webUrlPanel" 
                          Margin="10" 
                          Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Введите URL веб-контента:" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,8"
                                   Grid.Row="0"/>

                        <StackPanel Grid.Row="1" 
                                    Orientation="Horizontal" 
                                    Margin="0,0,0,8">
                            <TextBox x:Name="webUrlTextBox" 
                                     Text="https://" 
                                     Height="28"
                                     FontSize="12"
                                     VerticalAlignment="Center" 
                                     VerticalContentAlignment="Center"/>
                            <Button Content="➕ Добавить URL" 
                                    Click="AddWebUrl" 
                                    Style="{StaticResource ModernButton}" 
                                    Background="#10B981"
                                    Height="28"
                                    FontSize="11"
                                    Padding="12,0"
                                    Margin="8,0,0,0"/>
                        </StackPanel>

                        <TextBlock Grid.Row="2" 
                                   Text="Поддерживаются: YouTube, Vimeo, прямые ссылки на видео/аудио" 
                                   FontSize="10" 
                                   Foreground="#6B7280" 
                                   Margin="0,0,0,8"
                                   TextWrapping="Wrap"/>

                        <Border Grid.Row="3" 
                                BorderThickness="1" 
                                BorderBrush="#D1D5DB" 
                                CornerRadius="4" 
                                Background="#F9FAFB">
                            <ListView x:Name="webUrlsList" 
                                      BorderThickness="0" 
                                      Background="Transparent"
                                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                                      MaxHeight="200">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="{Binding Url}" 
                                                       VerticalAlignment="Center"
                                                       FontSize="11"
                                                       ToolTip="{Binding Url}"
                                                       TextTrimming="CharacterEllipsis"/>

                                            <ComboBox Grid.Column="1" 
                                                      Width="90" 
                                                      Height="22" 
                                                      FontSize="9"
                                                      SelectedIndex="0"
                                                      VerticalAlignment="Center"
                                                      Margin="8,0">
                                                <ComboBoxItem Content="Видео"/>
                                                <ComboBoxItem Content="Аудио"/>
                                                <ComboBoxItem Content="Веб-страница"/>
                                            </ComboBox>

                                            <Button Grid.Column="2" 
                                                    Content="🗑️" 
                                                    Click="RemoveWebUrl"
                                                    Tag="{Binding}"
                                                    Style="{StaticResource ModernIconButton}" 
                                                    Background="Transparent"
                                                    Width="20" 
                                                    Height="20"
                                                    FontSize="9"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Border>
                    </Grid>

                    <!-- Панель выбора папки -->
                    <Grid x:Name="folderPanel" 
                          Margin="10" 
                          Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Выберите папку с медиафайлами:" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,8"
                                   Grid.Row="0"/>

                        <StackPanel Grid.Row="1" 
                                    Orientation="Horizontal" 
                                    Margin="0,0,0,8">
                            <TextBox x:Name="folderPathTextBox" 
                                     Height="28"
                                     FontSize="12"
                                     VerticalAlignment="Center" 
                                     VerticalContentAlignment="Center"/>
                            <Button Content="📂 Обзор папки" 
                                    Click="BrowseFolder" 
                                    Style="{StaticResource ModernButton}" 
                                    Background="#6B7280"
                                    Height="28"
                                    FontSize="11"
                                    Padding="12,0"
                                    Margin="8,0,0,0"/>
                        </StackPanel>

                        <CheckBox Grid.Row="2"
                                  x:Name="includeSubfoldersCheckBox" 
                                  Content="Включая подпапки"
                                  FontSize="11"
                                  IsChecked="True"
                                  Margin="0,0,0,8"/>

                        <TextBlock Grid.Row="3"
                                   Text="Поддерживаемые форматы: .mp4, .avi, .mkv, .mp3, .wav, .jpg, .png" 
                                   FontSize="10" 
                                   Foreground="#6B7280"
                                   TextWrapping="Wrap"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- Информация о выборе -->
            <Border Grid.Row="3" Background="#F8F9FA" Padding="8" CornerRadius="4" Margin="0,0,0,10">
                <TextBlock x:Name="selectionInfo" 
                           Text="Выберите файлы или URL для добавления в плейлист" 
                           FontStyle="Italic" 
                           FontSize="11"
                           Foreground="#666"
                           TextWrapping="Wrap"/>
            </Border>

            <!-- Кнопки действий -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Отмена" 
                        Click="CloseWindow"
                        Style="{StaticResource ModernButton}" 
                        Background="#6B7280"
                        MinWidth="80"
                        Height="32"
                        FontSize="12"
                        Padding="15,0"/>

                <Button x:Name="addButton" 
                        Content="Добавить в плейлист" 
                        Click="AddToPlaylist"
                        Style="{StaticResource ModernButton}" 
                        Background="#10B981"
                        MinWidth="120"
                        Height="32"
                        FontSize="12"
                        Padding="15,0"
                        Margin="10,0,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Page>