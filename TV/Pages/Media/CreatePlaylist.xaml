<Page x:Class="TV.Pages.Media.CreatePlaylist"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TV.Pages.Media"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="600"
      Title="Add"
      Background="White">

    <Page.Resources>
        <ResourceDictionary Source="/Resources/Dictionary.xaml"/>
    </Page.Resources>

    <Border CornerRadius="8" BorderThickness="1" BorderBrush="#E5E7EB" Background="White">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#F8F9FA" CornerRadius="6,6,0,0" Padding="10,5" Margin="-10, -10, -10, 15">
                <Grid>
                    <TextBlock Text="Создание нового плейлиста" 
                               Style="{StaticResource PageHeaderStyle}" 
                               FontSize="16"/>

                    <Button Content="✕" 
                            Click="CloseWindow"
                            Style="{StaticResource ModernIconButton}" 
                            Background="Transparent"
                            Foreground="#6B7280"
                            BorderThickness="0"
                            Width="30" Height="30"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Padding="0"/>
                </Grid>
            </Border>

            <StackPanel Grid.Row="1" Margin="0,0,0,20">
                <!-- Название плейлиста -->
                <Grid Margin="0,0,0,15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Название плейлиста" 
                               FontWeight="SemiBold" 
                               FontSize="13"
                               Foreground="#374151" 
                               Margin="0,0,0,3"/>

                    <TextBox Grid.Row="1" x:Name="playlistNameTextBox" 
                             Text="{Binding PlaylistName, UpdateSourceTrigger=PropertyChanged}"
                             Background="White"
                             BorderBrush="#D1D5DB"
                             BorderThickness="1"
                             Padding="6,4"
                             Height="30" 
                             FontSize="13"
                             VerticalContentAlignment="Center"
                             ToolTip="Введите название плейлиста"
                             TextChanged="PlaylistName_TextChanged"
                             MaxLength="100"/>
                </Grid>

                <!-- Описание -->
                <Grid Margin="0,0,0,15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Описание" 
                               FontWeight="SemiBold" 
                               FontSize="13"
                               Foreground="#374151" 
                               Margin="0,0,0,3"/>

                    <TextBox Grid.Row="1" x:Name="description" 
                             Text="{Binding Description}"
                             Background="White"
                             BorderBrush="#D1D5DB"
                             BorderThickness="1"
                             Padding="6,4"
                             Height="45" 
                             FontSize="13"
                             TextWrapping="Wrap" 
                             AcceptsReturn="True"
                             VerticalContentAlignment="Top"
                             ToolTip="Введите описание плейлиста"
                             MaxLength="500"/>
                </Grid>

                <TextBlock x:Name="validationText" 
                           Text="Введите название плейлиста" 
                           FontSize="11" 
                           Margin="0,5,0,0"
                           Foreground="#6B7280"
                           Visibility="Visible"/>
            </StackPanel>

            <Border Grid.Row="2" Height="1" Background="#E5E7EB" Margin="-20,0,-20,15"/>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Отмена" 
                        Click="CloseWindow"
                        Style="{StaticResource ModernButton}" 
                        Background="#6B7280"
                        Width="80"/>

                <Button x:Name="createButton" 
                        Content="Создать" 
                        Click="Create"
                        Style="{StaticResource ModernButton}" 
                        Background="#10B981"
                        MinWidth="80"
                        Width="Auto"
                        Margin="10,0,0,0"
                        IsEnabled="False"/>
            </StackPanel>
        </Grid>
    </Border>
</Page>