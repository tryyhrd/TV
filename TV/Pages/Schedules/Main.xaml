<Page x:Class="TV.Pages.Schedules.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TV.Pages.Schedules"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="Schedules" Background="White">

    <Grid Margin="10">
        <Grid.Resources>
            <ResourceDictionary Source="/Resources/Dictionary.xaml"/>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и кнопки управления -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Background="#F8FAFC" BorderBrush="#E2E8F0" Margin="0,0,0,10">
            <Grid>
                <TextBlock Text="📅 Управление расписаниями" 
                          Style="{StaticResource PageHeaderStyle}"
                          Foreground="#1E293B"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0,0,0">
                    <Button Content="➕ Создать расписание" Click="CreateSchedule" 
                            Style="{StaticResource ModernButton}" 
                            Background="#065F46"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="12,6"/>
                    <Button Content="🗑️ Удалить расписание" Click="DeleteSelectedSchedule" 
                            Style="{StaticResource ModernButton}" 
                            Background="#991B1B" 
                            Foreground="White"
                            BorderThickness="0"
                            Padding="12,6"
                            Margin="8,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <Grid Grid.Row="1" Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" x:Name="leftColumn"/>
                <ColumnDefinition Width="5" x:Name="gridSpliter"/>
                <ColumnDefinition Width="0" x:Name="rightColumn"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource CardStyle}" 
                    Background="White" BorderBrush="#E2E8F0" BorderThickness="1"
                    CornerRadius="8" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#F8FAFC" Padding="12,10" 
                            CornerRadius="8,8,0,0" BorderThickness="0,0,0,1" BorderBrush="#E2E8F0">
                        <TextBlock Text="📋 Мои расписания" FontWeight="SemiBold" Foreground="#374151"/>
                    </Border>

                    <ListView Grid.Row="1" x:Name="schedulesListView" 
                              SelectionChanged="Schedule_Selected"
                              BorderThickness="0" Background="Transparent"
                              ItemsSource="{Binding Schedules}"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              Padding="8">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#F3F4F6"/>
                                <Setter Property="Padding" Value="8,12"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <Border x:Name="Bd"
                                                    Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="0"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="#F8FAFC"/>
                                                    <Setter TargetName="Bd" Property="BorderBrush" Value="#E5E7EB"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="#E0F2FE"/>
                                                    <Setter TargetName="Bd" Property="BorderBrush" Value="#0EA5E9"/>
                                                    <Setter TargetName="Bd" Property="BorderThickness" Value="0,0,0,2"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Название и статус -->
                                    <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" 
                                                   FontWeight="SemiBold" 
                                                   FontSize="13"
                                                   Foreground="#1F2937"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <Border 
                                                CornerRadius="10" Padding="4,2" Margin="8,0,0,0">
                                            <TextBlock 
                                                       FontSize="9"
                                                       Foreground="White"
                                                       FontWeight="Bold"/>
                                        </Border>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,4,0,0">
                                        <TextBlock
                                                   FontSize="10" 
                                                   Foreground="#6B7280"/>
                                        <TextBlock Text=" • " 
                                                   FontSize="10" 
                                                   Foreground="#D1D5DB"
                                                   Margin="2,0"/>
                                        <TextBlock Text="{Binding TimeRange}" 
                                                   FontSize="10" 
                                                   Foreground="#6B7280"/>
                                    </StackPanel>

                                    <!-- Дни недели и элементы -->
                                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,2,0,0">
                                        <TextBlock Text="{Binding DaysInfo}" 
                                                   FontSize="9" 
                                                   Foreground="#9CA3AF"/>
                                        <TextBlock Text=" • " 
                                                   FontSize="9" 
                                                   Foreground="#D1D5DB"
                                                   Margin="2,0"/>
                                        <TextBlock Text="{Binding ItemsCount, StringFormat='{}Элементов: {0}'}" 
                                                   FontSize="9" 
                                                   Foreground="#9CA3AF"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!-- Статистика -->
                    <Border Grid.Row="2" Background="#F8FAFC" Padding="12,8" 
                            CornerRadius="0,0,8,8" BorderThickness="0,1,0,0" BorderBrush="#E2E8F0">
                        <TextBlock x:Name="schedulesStats" Text="Всего расписаний: 0" 
                                   FontSize="11" Foreground="#6B7280"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Разделитель -->
            <GridSplitter x:Name="splitterColumn" Grid.Column="1" Width="5" HorizontalAlignment="Stretch" 
                         Background="Transparent" Visibility="Collapsed"/>

            <!-- Правая панель - детали расписания -->
            <Border x:Name="rightContentPanel" Grid.Column="2" Style="{StaticResource CardStyle}" 
                    Background="White" BorderBrush="#E2E8F0" BorderThickness="1"
                    CornerRadius="8" Padding="0" Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок расписания -->
                    <Border Grid.Row="0" Background="#F8FAFC" Padding="15,12" 
                            CornerRadius="8,8,0,0" BorderThickness="0,0,0,1" BorderBrush="#E2E8F0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock x:Name="currentScheduleName" 
                                           Text="Выберите расписание" 
                                           FontWeight="SemiBold" 
                                           FontSize="16"
                                           Foreground="#1E293B"/>
                                <TextBlock x:Name="currentScheduleInfo"
                                           Text=""
                                           FontSize="11"
                                           Foreground="#6B7280"
                                           Margin="0,2,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <ToggleButton x:Name="activeToggle" Content="Активно" 
                                              Click="ToggleScheduleActive"
                                              Style="{StaticResource ModernToggleButton}"
                                              Margin="0,0,8,0"/>
                                <Button Content="✏️ Изменить" 
                                        Click="EditSchedule" 
                                        Style="{StaticResource ModernButton}" 
                                        Background="#6B7280"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Padding="10,5"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Настройки времени -->
                    <Border Grid.Row="1" Background="#F8FAFC" Padding="12,8" 
                            BorderThickness="0,0,0,1" BorderBrush="#E2E8F0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Тип:"
                                       FontWeight="SemiBold" FontSize="12"
                                       Foreground="#374151" VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>

                            <TextBlock Grid.Column="1" x:Name="scheduleTypeText"
                                       Text="Не указан"
                                       FontSize="11" Foreground="#6B7280"
                                       VerticalAlignment="Center"/>

                            <TextBlock Grid.Column="2" Text="Период:"
                                       FontWeight="SemiBold" FontSize="12"
                                       Foreground="#374151" VerticalAlignment="Center"
                                       Margin="16,0,8,0"/>

                            <TextBlock Grid.Column="3" x:Name="schedulePeriodText"
                                       Text="Не указан"
                                       FontSize="11" Foreground="#6B7280"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Элементы расписания -->
                    <DataGrid Grid.Row="2" x:Name="scheduleItemsGrid" 
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              HeadersVisibility="Column" 
                              BorderThickness="0"
                              Background="White"
                              RowStyle="{StaticResource ModernDataGridRow}"
                              CellStyle="{StaticResource ModernDataGridCell}"
                              VerticalGridLinesBrush="#F3F4F6"
                              HorizontalGridLinesBrush="Transparent"
                              BorderBrush="#E5E7EB"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto">

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#F8FAFC"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#E2E8F0"/>
                                <Setter Property="Foreground" Value="#374151"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Padding" Value="8,8"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" Binding="{Binding Order}" Width="30">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="TextAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="#6B7280"/>
                                        <Setter Property="FontSize" Value="11"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Тип" Binding="{Binding ContentType}" Width="70">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="TextAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="#6B7280"/>
                                        <Setter Property="FontSize" Value="11"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Контент" Binding="{Binding ContentName}" Width="*" MinWidth="150">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="TextAlignment" Value="Left"/>
                                        <Setter Property="Foreground" Value="#1F2937"/>
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                        <Setter Property="Margin" Value="10,0,0,0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Длительность" Binding="{Binding Duration, StringFormat='{} {0} сек'}" Width="90">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="TextAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="#6B7280"/>
                                        <Setter Property="FontSize" Value="11"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Режим" Binding="{Binding PlaylistMode}" Width="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="TextAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="#6B7280"/>
                                        <Setter Property="FontSize" Value="11"/>
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTemplateColumn Header="Действия" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" 
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center">
                                            <Button Content="▲" 
                                                    Click="MoveItemUp" 
                                                    Tag="{Binding Id}"
                                                    Style="{StaticResource ModernIconButton}" 
                                                    Background="#6B7280"
                                                    Width="20" Height="20"
                                                    FontSize="8"
                                                    ToolTip="Поднять вверх"/>
                                            <Button Content="▼" 
                                                    Click="MoveItemDown" 
                                                    Tag="{Binding Id}"
                                                    Style="{StaticResource ModernIconButton}" 
                                                    Background="#6B7280" 
                                                    Width="20" Height="20"
                                                    FontSize="8"
                                                    Margin="2,0,0,0"
                                                    ToolTip="Опустить вниз"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Панель действий -->
                    <Border Grid.Row="3" Background="#F8FAFC" Padding="12,8" 
                            CornerRadius="0,0,8,8" BorderThickness="0,1,0,0" BorderBrush="#E2E8F0">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="📋 Добавить плейлист" 
                                    Click="AddPlaylistToSchedule" 
                                    Style="{StaticResource ModernButton}" 
                                    Background="#065F46"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Padding="12,6"/>
                            <Button Content="🎬 Добавить медиа" 
                                    Click="AddMediaToSchedule" 
                                    Style="{StaticResource ModernButton}" 
                                    Background="#374151" 
                                    Foreground="White"
                                    BorderThickness="0"
                                    Padding="12,6"
                                    Margin="8,0,0,0"/>
                            <Button Content="🌐 Добавить веб-страницу" 
                                    Click="AddWebToSchedule" 
                                    Style="{StaticResource ModernButton}" 
                                    Background="#7C3AED" 
                                    Foreground="White"
                                    BorderThickness="0"
                                    Padding="12,6"
                                    Margin="8,0,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>