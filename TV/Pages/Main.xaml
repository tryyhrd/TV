<Page x:Class="TV.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TV.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main" Background="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="🔄 Обнаружить дисплеи" Click="DetectDisplays"/>
            <Button Content="▶️ Запустить все" Click="StartAll" Margin="5,0"/>
            <Button Content="⏹️ Остановить все" Click="StopAll" Margin="5,0"/>
        </StackPanel>

        <DataGrid Grid.Row="1" x:Name="displaysGrid" AutoGenerateColumns="False" IsReadOnly="True">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Дисплей" Binding="{Binding Name}" Width="100"/>
                <DataGridTextColumn Header="Разрешение" Binding="{Binding Resolution}" Width="100"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="80"/>
                <DataGridTextColumn Header="Плейлист" Binding="{Binding PlaylistName}" Width="150"/>
                <DataGridTemplateColumn Header="Действия" Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="▶" Click="StartDisplay" Tag="{Binding Id}" 
                                    Width="30" ToolTip="Запустить"/>
                                <Button Content="⏹" Click="StopDisplay" Tag="{Binding Id}" 
                                    Width="30" Margin="2,0" ToolTip="Остановить"/>
                                <Button Content="⚙" Click="ConfigureDisplay" Tag="{Binding Id}" 
                                    Width="30" Margin="2,0" ToolTip="Настроить"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>

            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Запустить плейлист" Click="StartPlaylistOnDisplay">
                        <MenuItem.Icon>
                            <Image  Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Запустить медиафайл" Click="StartMediaOnDisplay">
                        <MenuItem.Icon>
                            <Image  Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator/>
                    <MenuItem Header="Остановить воспроизведение" Click="StopDisplayPlayback">
                        <MenuItem.Icon>
                            <Image  Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Настройки дисплея" Click="ConfigureDisplay">
                        <MenuItem.Icon>
                            <Image  Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>

        <TextBlock Grid.Row="2" x:Name="displaysStatus" Margin="0,10,0,0"/>
    </Grid>
</Page>
