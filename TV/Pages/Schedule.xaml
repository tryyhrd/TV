<Page x:Class="TV.Pages.Schedule"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TV.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="900"
      Title="Schedule" Background="White">

    <Grid Margin="15">
        <Grid.Resources>
            <ResourceDictionary Source="/Resources/Dictionary.xaml"/>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource CardStyle}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="⏰ Управление расписаниями" Style="{StaticResource PageHeaderStyle}"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0,0,0">
                    <Button Content="➕ Новое расписание" Click="CreateSchedule" 
                        Style="{StaticResource ModernButton}" Background="#10B981"/>
                    <Button Content="🗑️ Удалить выбранные" Click="DeleteSchedules" 
                        Style="{StaticResource ModernButton}" Background="#EF4444" Margin="8,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Активные расписания" FontWeight="SemiBold" Margin="0,0,0,10"/>

                    <ListView Grid.Row="1" x:Name="schedulesListView" 
                          SelectionChanged="Schedule_Selected"
                          BorderThickness="0" Background="Transparent">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8,6" Background="Transparent" CornerRadius="4">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="Medium"/>
                                        <TextBlock Text="{Binding ScheduleRange}" FontSize="11" Foreground="#666"/>
                                        <TextBlock Text="{Binding Status}" FontSize="11" 
                                               Foreground="{Binding StatusColor}"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="Transparent"/>

            <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="0" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#F8F9FA" Padding="15" CornerRadius="6,6,0,0">
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="currentScheduleName" Text="Выберите расписание" 
                                       FontWeight="SemiBold" VerticalAlignment="Center"/>
                                <TextBlock x:Name="scheduleStatus" Text=" (Неактивно)" 
                                       Foreground="#666" Margin="5,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="▶️ Запустить" Click="StartSchedule" 
                                    Style="{StaticResource ModernIconButton}" Background="#10B981" Width="auto"/>
                                <Button Content="⏹️ Остановить" Click="StopSchedule" 
                                    Style="{StaticResource ModernIconButton}" Background="#EF4444" Margin="5,0" Width="auto"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="timelineItems" Margin="10">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,8" Padding="10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                                <TextBlock Text="{Binding StartTime}" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock Text="{Binding EndTime}" Foreground="#666" FontSize="12"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding PlaylistName}" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Description}" Foreground="#666" FontSize="12"/>
                                                <ProgressBar Value="{Binding Progress}" Maximum="100" 
                                                         Height="6" Margin="0,5,0,0" Background="#E5E7EB"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                <Button Content="✏️" Click="EditTimeSlot" Tag="{Binding Id}"
                                                    Style="{StaticResource ModernIconButton}" Background="#6B7280"/>
                                                <Button Content="🗑️" Click="DeleteTimeSlot" Tag="{Binding Id}"
                                                    Style="{StaticResource ModernIconButton}" Background="#EF4444" Margin="5,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <Border Grid.Row="2" Background="#F8F9FA" Padding="10" CornerRadius="0,0,6,6">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="➕ Добавить период" Click="AddTimeSlot" 
                                Style="{StaticResource ModernButton}" Background="#10B981"/>
                            <ComboBox x:Name="playlistSelector" Width="200" Margin="10,0" 
                                  DisplayMemberPath="Name" Height="28"/>
                            <DatePicker x:Name="scheduleDate" Width="120" Margin="10,0"/>
                            <Button Content="🔄 Повторение" Click="ConfigureRepeating" 
                                Style="{StaticResource ModernButton}" Background="#6B7280" Margin="10,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
